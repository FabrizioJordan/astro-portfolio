---
import MiniProject from "./MiniProject.astro";
import projects from "../../services/docs/mini-projects.json";
--- 

<section class="flex flex-col gap-4 max-w-3xl">
  <hgroup>
    <h2 class="font-semibold">Other projects.</h2>
    <p class="text-[#c9c9c9] font-thin">
      The rest of the projects created by me or in which I participated.
    </p>
  </hgroup>
  <ul class="flex flex-row gap-2 flex-wrap">
    { 
      projects.map(({ name, image, url, github }) => (
        <MiniProject
          name={name}
          image={image}
          url={url}
          github={github}
        />
      ))
    }
  </ul>
</section>
